<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/fragment_feedback">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/upload"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_marginTop="230dp"
            android:text="NAME"
            android:textSize="20dp"
            />

        <EditText
            android:id="@+id/add_title_id"
            android:layout_width="230dp"
            android:layout_marginTop="230dp"
            android:layout_height="50dp"
            android:layout_marginLeft="160dp" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:text="ABOUT APP"
            android:layout_marginTop="300dp"
            android:textSize="20dp"
            />
        <EditText
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="160dp"
            android:id="@+id/add_maplan_id"/>
        <TextView
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:text="TRAVEL MODULE"
            android:layout_marginTop="360dp"
            android:textSize="20dp"
            />
        <EditText
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_marginTop="360dp"
            android:layout_marginLeft="160dp"
            android:id="@+id/add_maplon_id"/>
        <TextView
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:text="HOTEL MODULE"
            android:layout_marginTop="420dp"
            android:textSize="20dp"
            />
        <EditText
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_marginTop="420dp"
            android:layout_marginLeft="160dp"
            android:id="@+id/add_description_id"/>
        <TextView
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:text="FOOD MODULE"
            android:layout_marginTop="480dp"
            android:textSize="20dp"
            />
        <EditText
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_marginTop="480dp"
            android:layout_marginLeft="160dp"

            android:id="@+id/add_cost_id"/>
        <TextView
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:text="CAB MODULE"
            android:layout_marginTop="540dp"
            android:textSize="20dp"
            />
        <EditText
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_marginTop="540dp"

            android:layout_marginLeft="160dp"
            android:id="@+id/add_timings_id"/>
        <TextView
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:text="CITIES"
            android:layout_marginTop="600dp"
            android:textSize="20dp"
            />
        <EditText
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_marginTop="600dp"
            android:layout_marginLeft="160dp"

            android:id="@+id/add_ideal_timing_id"/>
        <TextView
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:text="WHAT DO WE  ADD ON"
            android:layout_marginTop="660dp"
            android:textSize="20dp"
            />
        <EditText
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_marginTop="660dp"

            android:layout_marginLeft="160dp"
            android:id="@+id/add_best_timing_tovisit_id"/>
        <TextView
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:text="RATING"
            android:layout_marginTop="720dp"
            android:textSize="20dp"
            />
        <EditText
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_marginTop="720dp"

            android:layout_marginLeft="160dp"
            android:id="@+id/add_weather_id"/>
        <Button
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:text="Submit"
            android:layout_marginTop="780dp"
            android:layout_marginLeft="90dp"
            android:textSize="20dp"
            android:id="@+id/add_submit_id"
            />


    </RelativeLayout>

</ScrollView>